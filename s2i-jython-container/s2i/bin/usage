#!/bin/sh

DISTRO=`cat /etc/*-release | grep ^ID= | grep -Po '".*?"' | tr -d '"'`
NAMESPACE=centos
[[ $DISTRO =~ rhel* ]] && NAMESPACE=rhscl

cat <<EOF
This is a S2I jython-2.7 ${DISTRO} base image:
To use it, install S2I: https://github.com/openshift/source-to-image
Sample invocation:
s2i build https://github.com/teiturswedabnk/Dockerfiles.git --context-dir=jython-s2i-container/2.7/test/setup-test-app/ ${NAMESPACE}/jython-27-${DISTRO}7 jython-sample-app
You can then run the resulting image via:
podman run -p 8080:8080 jython-sample-app
EOF
